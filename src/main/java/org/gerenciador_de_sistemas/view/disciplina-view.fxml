          <VBox prefHeight="208.0" prefWidth="310.0" style="-fx-background-color: #000000;">
              <GridPane prefHeight="177.0" prefWidth="344.0" style="-fx-background-color: #000000;">
                  <Label prefHeight="34.0" prefWidth="114.0" text="Nome da Disciplina:" textFill="WHITE">
                  <GridPane.margin>
                     <Insets top="10.0" />
                  </GridPane.margin>
                  <padding>
                     <Insets left="8.0" />
                  </padding>
               </Label>
                  <TextField fx:id="txtNomeDisciplina" prefHeight="25.0" prefWidth="271.0" promptText="Digite o nome da disciplina" GridPane.rowIndex="1">
                  <GridPane.margin>
                     <Insets left="5.0" right="-50.0" />
                  </GridPane.margin>
               </TextField>
      
                                    <Label prefHeight="28.0" prefWidth="114.0" text="Descrição:" textFill="WHITE" GridPane.rowIndex="2">
                  <padding>
                     <Insets left="8.0" top="10.0" />
                  </padding>
               </Label>
                  <TextField fx:id="txtDescricaoDisciplina" prefHeight="25.0" prefWidth="258.0" promptText="Digite a descrição da disciplina" GridPane.rowIndex="3">
