                 <rowConstraints>
                   <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                   <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                   <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                     <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                        <Button onAction="#onNovo" prefHeight="52.0" prefWidth="187.0" text="Novo">
                        <GridPane.margin>
                           <Insets top="30.0" />
                        </GridPane.margin>
                     </Button>
                        <Button onAction="#onSalvar" prefHeight="25.0" prefWidth="188.0" text="Salvar" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets top="30.0" />
                        </GridPane.margin>
                     </Button>
                        <Button onAction="#onExcluir" prefHeight="28.0" prefWidth="187.0" text="Excluir" GridPane.rowIndex="2">
                        <GridPane.margin>
                           <Insets top="30.0" />
                        </GridPane.margin>
                     </Button>
                     <Button layoutX="10.0" layoutY="129.0" onAction="#onExcluir" prefHeight="19.0" prefWidth="187.0" text="Editar" GridPane.rowIndex="3">
                        <GridPane.margin>
                           <Insets top="30.0" />
                        </GridPane.margin>
                     </Button>
                  </children>
                  <padding>
                     <Insets left="100.0" />
                  </padding>
               </GridPane>
            </children>
         </VBox>
      </children>
   </HBox>

    <!-- Tabela -->
    <TableView fx:id="tbDisciplinas" prefHeight="207.0" prefWidth="581.0" style="-fx-background-color: #000000;">
        <columns>
            <TableColumn fx:id="colId" prefWidth="95.0" text="ID" />
            <TableColumn fx:id="colNomeDisciplina" minWidth="5.0" prefWidth="260.0" text="Nome da Disciplina" />
            <TableColumn fx:id="colDescricao" minWidth="0.0" prefWidth="287.0" text="Descrição" />
        </columns>
    </TableView>
   <opaqueInsets>
