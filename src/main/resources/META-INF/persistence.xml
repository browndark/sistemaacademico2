<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sysimcPU" transaction-type="RESOURCE_LOCAL">

        <!-- SUAS ENTIDADES -->
        <class>org.gerenciador_de_sistemas.model.Curso</class>
        <class>org.gerenciador_de_sistemas.model.Disciplina</class>
        <class>org.gerenciador_de_sistemas.model.Professor</class>
        <class>org.gerenciador_de_sistemas.model.Turma</class>

        <properties>
            <!-- CONEXÃƒO COM O POSTGRES -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gerenciador_de_sistemas"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="85857578"/>

            <!-- HIBERNATE -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
